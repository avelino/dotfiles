// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  // zed: disable telemetry, not send feedback to zed server
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "language_models": {
    "anthropic": {
      "version": "1"
    }
  },
  // custom testing
  "always_treat_brackets_as_autoclosed": true,
  "auto_signature_help": true,
  "chat_panel": {
    "button": false
  },
  "journal": {
    "enabled": true,
    "path": "~/logseq/journals"
  },
  "load_direnv": "shell_hook",
  "prettier": {
    "enabled": true,
    "format_on_save": true
  },
  // custom testing
  // Tweaks
  "remove_trailing_whitespace_on_save": true,
  "ensure_final_newline_on_save": true,
  // Editor
  "autosave": "on_focus_change",
  "vim_mode": true,
  "vim": {
    "use_multiline_find": true,
    "use_smartcase_find": true,
    "use_system_clipboard": "always"
  },
  "auto_update_extensions": {
    "enabled": true
  },
  "cursor_blink": false,
  "auto_update": true,
  "gutter": {
    "line_numbers": true
  },
  // UI/UX
  "theme": "Ros√© Pine",
  "buffer_font_size": 20,
  "buffer_font_family": "Maple Mono",
  // "ui_font_size": 20,
  "ui_font_family": "Maple Mono",
  "relative_line_numbers": false,
  "scrollbar": {
    "show": "never"
  },
  "vertical_scroll_margin": 0,
  "tabs": {
    // https://zed.dev/docs/configuring-zed#editor-tabs
    "show_icons": true,
    "git_status": true,
    "close_position": "right",
    "close_button": false
  },
  "tab_bar": {
    "show": false
  },
  "preferred_line_length": 90,
  "soft_wrap": "preferred_line_length",
  "use_autoclose": false,
  // Features
  "features": {
    "copilot": true
  },
  "copilot": {
    "enabled": true,
    "key": "Tab"
  },
  "show_copilot_suggestions": true,
  "formatter": {
    "language_server": {
      "name": "biome"
    }
  },
  "git": {
    // https://zed.dev/docs/configuring-zed#git
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true,
      "position": "right"
    }
  },
  // Panels
  "project_panel": {
    // https://zed.dev/docs/configuring-zed#project-panel
    "default_width": 225,
    "button": true,
    "dock": "left",
    // "dock": "right", // remap to cmd-b
    "git_status": true
  },
  "terminal": {
    "alternate_scroll": "off",
    "blinking": "terminal_controlled",
    "line_height": "standard",
    "shell": "system",
    "shell_args": [
      "--login"
    ],
    "font_size": 22,
    "font_family": "Maple Mono",
    "copy_on_select": true,
    "toolbar": {
      "title": true,
      "breadcrumbs": true,
      "quick_actions": false,
      "working_directory": "current_project_directory",
      "enabled": false
    },
    "shell_env": {
      "TERM": "xterm-256color"
    }
  },
  "collaboration_panel": {
    "button": false
  },
  "auto_install_extensions": {
    "enabled": true,
    "clojure": true,
    "python": true,
    "java": true,
    "javascript": true,
    "typescript": true,
    "go": true,
    "rust": true,
    "racket": true,
    "ruby": true
  },
  "assistant": {
    "default_model": {
      "provider": "openai",
      "model": "gpt-4o"
    },
    "version": "2",
    "enabled": false,
    "provider": "copilot"
  }
}
