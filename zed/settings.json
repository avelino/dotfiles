{
  // Configurações do sistema
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "auto_update": true,
  "load_direnv": "shell_hook",
  // Editor
  "editor": {
    "sticky_headers": true,
    "show_breadcrumbs": true,
    "highlight_matching_brackets": true,
    "suggest": {
      "preview": true, // Preview de sugestões
      "detail": true,
      "documentation": true,
      "filter_word": true,
      "match_mode": "prefix",
      "match_similar": true,
      "snippets": true,
      "show_word_suggestions": true
    },
    "smooth_scrolling": true, // Scrolling mais suave
    "cursor_surrogate_pair": true, // Melhor suporte a emoji/unicode
    "bracket_pair_colorization": true // Colorização de pares de parênteses
  },
  "always_treat_brackets_as_autoclosed": true,
  "auto_signature_help": true,
  "cursor_blink": false,
  "preferred_line_length": 90,
  "soft_wrap": "preferred_line_length",
  "use_autoclose": false,
  "vertical_scroll_margin": 0,
  "active_pane_magnification": 0,
  // Salvamento e formatação
  "autosave": "on_focus_change",
  "remove_trailing_whitespace_on_save": true,
  "ensure_final_newline_on_save": true,
  "prettier": {
    "enabled": true,
    "format_on_save": true
  },
  "formatter": {
    "language_server": {
      "name": "biome"
    }
  },
  // UI/UX
  "theme": "Tokyo Night",
  "buffer_font_size": 20,
  "buffer_font_family": "Maple Mono",
  "ui_font_family": "Maple Mono",
  "gutter": {
    "line_numbers": true
  },
  "relative_line_numbers": false,
  // Tabs e painéis
  "tabs": {
    "show_icons": true,
    "git_status": true,
    "show_diagnostics": "all",
    "close_position": "right",
    "close_button": false
  },
  "tab_bar": {
    "show": true
  },
  "project_panel": {
    "default_width": 225,
    "button": true,
    "dock": "left",
    "git_status": true
  },
  "chat_panel": {
    "button": false
  },
  "collaboration_panel": {
    "button": false
  },
  // Terminal
  "terminal": {
    "integrated_tabs": true, // Tabs integrados no terminal
    "minimum_contrast_ratio": 4.5, // Melhor legibilidade
    "alternate_scroll": "off",
    "blinking": "terminal_controlled",
    "line_height": "standard",
    "shell": "system",
    "shell_args": [
      "--login"
    ],
    "font_size": 22,
    "font_family": "Maple Mono",
    "copy_on_select": true,
    "toolbar": {
      "title": true,
      "breadcrumbs": true,
      "quick_actions": false,
      "working_directory": "current_project_directory",
      "enabled": false
    },
    "shell_env": {
      "TERM": "xterm-256color"
    },
    "cursor_style": "block", // Estilo do cursor
    "cursor_blink": true,
    "confirm_on_exit": true
  },
  // Vim
  "vim_mode": true,
  "vim": {
    "use_multiline_find": true,
    "use_smartcase_find": true,
    "use_system_clipboard": "always"
  },
  // Git
  "git": {
    "git_gutter": "tracked_files",
    "autofetch": true,
    "confirm_sync": true,
    "smart_commit_changes": true,
    "blame_line_highlighting": true,
    "inline_blame": {
      "enabled": true,
      "position": "right"
    }
  },
  // AI e Copilot
  "assistant": {
    "default_model": {
      "provider": "anthropic",
      "model": "claude-3-5-sonnet-latest"
    },
    "version": "2",
    "enabled": true,
    "provider": "zed"
  },
  "copilot": {
    "enabled": true,
    "key": "Tab"
  },
  "show_copilot_suggestions": true,
  "features": {
    "copilot": true
  },
  // Debug e LSP
  "debug": {
    "toolbar": {
      "breakpoints": true,
      "watches": true
    }
  },
  "lsp": {
    "diagnostics": {
      "show_gutter_indicators": true,
      "show_in_status_bar": true,
      "delay": 200, // Menor delay para diagnósticos
      "enable_code_lens": true
    },
    "signature_help": {
      "enabled": true,
      "documentation": true
    }
  },
  "show_call_status_icon": true,
  // Extensões e plugins
  "auto_update_extensions": {
    "enabled": true
  },
  "auto_install_extensions": {
    "enabled": true,
    "clojure": true,
    "python": true,
    "java": true,
    "javascript": true,
    "typescript": true,
    "go": true,
    "rust": true,
    "racket": true,
    "ruby": true,
    "markdown": true,
    "yaml": true,
    "json": true,
    "docker": true,
    "html": true,
    "css": true
  },
  // Markdown
  "markdown": {
    "preview": {
      "auto_open": true,
      "theme": "auto"
    }
  },
  // files
  "files": {
    "max_memory_for_open_files": 4096,
    "watch_exclude": {
      "**/.git/objects/**": true,
      "**/node_modules/**": true
    }
  },
  // Busca e diff
  "search": {
    "smart_case": true,
    "use_ignore_files": true,
    "ignore": {
      "hidden": true,
      "git": true,
      "patterns": [
        "node_modules",
        "dist",
        "build",
        ".git"
      ]
    }
  },
  "diff": {
    "max_file_size": 100000,
    "warning_file_size": 50000
  },
  // Status bar
  "status_bar": {
    "show": true,
    "items": [
      "mode",
      "diagnostics",
      "position",
      "file_path",
      "grammar"
    ]
  },
  // Journal
  "journal": {
    "enabled": true,
    "path": "~/logseq/journals"
  }
}
